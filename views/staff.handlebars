{{>menu}}
      <div class="container">
         <div class="row">
            <div class="col-sm-12">
               <h1>Staff</h1>
               <p>This is our staff directory. Here you can find the contact information for our staff members.</p>
               <p>Want to add a new staff member to our directory? <a href="/customize-staff"> You can add new staff member information here.</a></p>
               {{#if errorMessage}}
                  <div class="alert alert-danger" role="alert">
                     {{errorMessage}}
                  </div>
               {{/if}}
               <br>
            </div>
         </div>

         <div class="row">
            <div class="col-md-9">
               <h2>Staff Directory</h2>
               <table class="table table-hover table-striped">
                  <thead>
                     <tr>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Role</th>
                     </tr>
                  </thead>
                  <tbody>
                     {{#if results}}
                        {{#each results}}
                           <tr>
                              <td>{{this.name}}</td>
                              <td>{{this.phone}}</td>
                              <td>{{this.email}}</td>
                              <td>{{this.type}}</td>
                           </tr>
                        {{/each}}
                     {{/if}}
                  </tbody>
               </table>
            </div>
         </div>
      </div>  