{{>menu}}
      <div class="container">
         <div class="row">
             <div class="col-sm-12">
                 <h1>Add or Update Student</h1>
                 <p>Add or update a student.</p>
                 {{#if message}}
                     <div class="alert alert-success" role="alert">
                        {{message}}
                     </div>
                  {{/if}}
                 <br>
             </div>
         </div>
         <div class="row">
            <div class="col-md-12">
               <form action="/customize-student" method="get">
                  <div class="row">
                     <div class="col-md-3">
                        <div class="form-group">
                           <label class="sr-only" for="name">Name</label>
                           <input type="text" id="name" name="name" class="form-control" placeholder="Name*" required />
                        </div>
                     </div>
                     <div class="col-md-3">
                        <div class="form-group">
                           <label class="sr-only" for="university">University</label>
                           <input type="text" id="university" name="university" class="form-control" placeholder="University*" required />
                        </div>
                     </div>
                     <div class="col-md-3">
                        <div class="form-group">
                           <label class="sr-only" for="phone">Phone</label>
                           <input type="text" id="phone" name="phone" class="form-control" placeholder="Phone*" required />
                        </div>
                     </div>
                     <div class="col-md-3">
                        <div class="form-group">
                           <label class="sr-only" for="email">Email</label>
                           <input type="text" id="email" name="email" class="form-control" placeholder="Email*" required />
                        </div>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col-md-3">
                        <div class="form-group">
                           <label for="staff">Associated Staff Member</label>
                           <select class="form-control" id="staff" name="staff">
                              <option value = "">None</option>
                              {{#each staffList}}
                                 <option value = {{this.staffID}}> {{this.name}}</option>
                              {{/each}}
                           </select>
                        </div>
                     </div>
                     <div class="col-md-3">
                        <div class="form-group">
                           <label for="trip">Associated Trip</label>
                           <select class="form-control" id="trip" name="trip">
                              <option value = "">None</option>
                              {{#each tripList}}
                                 <option value = {{this.tripID}}> {{this.name}}</option>
                              {{/each}}
                           </select>
                        </div>
                     </div>
                  </div>   
                  <div class="row">
                     <div class="form-group">
                       <input type="submit" name="add" value="Add" class="btn btn-primary" />
                     </div>
                  </div>
               </form>
            </div>
         </div>
     </div>