{{>menu}}
   <div class="container">
      <div class="row">
         <div class="col-sm-12">
            <h1>Students</h1>
            <p>This is a list of our current clients. Contact information and university affiliation can be found here.</p>
            <p>Want to add a new student? <a href="/customize-student"> You can do that here.</a></p>
            {{#if message}}
               <div class="alert alert-success" role="alert">
               {{message}}
               </div>
            {{/if}}
            {{#if errorMessage}}
                <div class="alert alert-danger" role="alert">
                    {{errorMessage}}
                </div>
            {{/if}}
         </div>
      </div>
      <div class="row">
         <div class="col-md-9">
            <h2>Current Students</h2>
            <table class="table table-hover table-striped">
               <thead>
                  <tr>
                     <th>Name</th>
                     <th>University</th>
                     <th>Phone</th>
                     <th>Email</th>
                     <th>Staff Member</th>
                     <th>Trip</th>
                     <th>Update</th>
                  </tr>
               </thead>
               <tbody>
                  {{#if results}}
                     {{#each results}}
                        <tr>
                           <td>{{this.studentName}}</td>
                           <td>{{this.university}}</td>
                           <td>{{this.phone}}</td>
                           <td>{{this.email}}</td>
                           <td>{{this.staffName}}</td>
                           <td>{{this.tripsName}}</td>
                           <td>
                              <form action="/customize-student" method="get">
                                 <div class="form-group">
                                    <input type="hidden" name="studentID" value="{{this.studentID}}">
                                    <input type="submit" name="update" value="Update" class="btn btn-primary" />
                                 </div>
                              </form>
                           </td>
                        </tr>
                     {{/each}}
                  {{/if}}
               </tbody>
            </table>
         </div>
      </div>
   </div> 
